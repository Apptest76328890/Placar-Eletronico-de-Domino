const CACHE_NAME = 'placar-dominio-v1';
const BASE_URL = 'https://store-app.github.io/Placar-Eletronico-de-Domino/';
const FILES_TO_CACHE = [
  `${BASE_URL}index.html`,
  `${BASE_URL}style.css`,
  `${BASE_URL}script.js`,
  `${BASE_URL}icon-192x192.png`,
  `${BASE_URL}icon-512x512.png`
];

// Instalação: Adiciona arquivos ao cache
self.addEventListener('install', event => {
  event.waitUntil(
    caches.open(CACHE_NAME).then(cache => {
      console.log('Arquivos adicionados ao cache!');
      return cache.addAll(FILES_TO_CACHE);
    })
  );
});

// Ativação: Limpa caches antigos
self.addEventListener('activate', event => {
  event.waitUntil(
    caches.keys().then(cacheNames => {
      return Promise.all(
        cacheNames.map(cache => {
          if (cache !== CACHE_NAME) {
            console.log('Cache antigo removido:', cache);
            return caches.delete(cache);
          }
        })
      );
    })
  );
});

// Fetch: Responde com arquivos do cache ou busca online
self.addEventListener('fetch', event => {
  event.respondWith(
    caches.match(event.request).then(response => {
      return response || fetch(event.request);
    })
  );
});
